<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CourtPiece.Mobile.MainView"     
             MaximumWidthRequest="400">
    <ScrollView>
        <VerticalStackLayout   >
            <ScrollView>
                <FlexLayout Wrap="Wrap"  x:Name="Images"  MaximumWidthRequest="400" AlignItems="Center" >

                </FlexLayout>
            </ScrollView>
            <Button        x:Name="CounterBtn"
        Text="Click me"
        SemanticProperties.Hint="Counts the number of times you click"
        Clicked="OnCounterClicked"
        HorizontalOptions="Center" />


            <Label>Enter Your Name</Label>
            <Button x:Name="GuidButton" Clicked="GuidButton_Clicked" Text="GUID"></Button>
            <Entry x:Name="NameEntry"></Entry>

            <Entry x:Name="RoomEntry" Text="0c3b1a06-7ed9-11ee-b962-0242ac120002"></Entry>
            <Label x:Name="MessageLabel"></Label>
        </VerticalStackLayout>

    </ScrollView>

</ContentView>