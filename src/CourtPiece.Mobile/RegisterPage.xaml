<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CourtPiece.Mobile.Register"
            >
    <VerticalStackLayout>
        <Entry Placeholder="Enter Your Name" x:Name="Username"></Entry>
        <Entry Placeholder="Enter Your Password" x:Name="Password"></Entry>
        <Entry Placeholder="Repeat Your Password" x:Name="RetypedPassword"></Entry>
        <Button Text="Register" Clicked="RegisterButton_Clicked"></Button>
    </VerticalStackLayout>
</ContentView>